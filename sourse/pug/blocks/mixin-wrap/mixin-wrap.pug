mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1")
		+e.btn--plus(type="button")



mixin search()
	+b.search-block
		form
			input(type="text" placeholder="Поиск по номеру или названию запчасти")
			button 
				+icon("search")

mixin page-head(t)
	+b.page-head
		- let l = items.length
		.container
			//- +breadcrumb('Главная',...items)

			h1= t

mixin infoCard(head, img='info-card-img.jpg')
	+b.info-card
		if head
			.h6!=head
			+e.text Для детей от 3 до 8 лет
		.row
			.col-lg-6
				+e.img-wrap
					.img-wrap-center
						+img(`img/${img}`, 'bg')
			.col-lg-6
				+e.wrap
					p Вы хотите пойти в поход но не знаете<br>с чего начать? Спросите нас, мы поможем вам подобрать идеальный вариант, исходя из ваших навыков. Поможем подобрать программу как для семьи так и для большой компанииДля оплаты товара, стоимость которого превышает номинал подарочной карты, покупатель без проблем может пополнить свою карту до нужной суммы
					+e.btn.btn.btn-outline-primary.base-btn(href='#') Узнать больше

mixin card(img, title, date='24 - 28 мая 2023', count='42')
	+b.card.bg-wrap(href='#')
		+img(`img/${img}`, 'bg').picture-bg
		+e.wrap
			.h6!=title
			+e.text-wrap
				p Вы&nbsp;хотите пойти в&nbsp;поход но&nbsp;не&nbsp;знаете с&nbsp;чего начать? Спросите нас, мы&nbsp;поможем вам подобрать идеальный вариант, исходя из&nbsp;ваших навыков. Поможем подобрать программу как для семьи так и&nbsp;для большой компании
			.row
				.col
					+e.date!= date
				.col-auto
					+e.count
						+icon('users')
						!= count